<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button_selector_cancel"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/custom_dialog_btn_cancel"
        android:textColor="@color/ht_global_main_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_tilte"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_selector_confirm"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="right|center_vertical"
        android:paddingRight="15dp"
        android:text="@string/custom_dialog_btn_confirm"
        android:textColor="@color/ht_global_main"
        android:textSize="14sp" />
</LinearLayout>