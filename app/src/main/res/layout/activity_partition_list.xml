<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.adolsai.asrabbit.views.AsRabbitTitleBar
        android:id="@+id/partition_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.cjj.MaterialRefreshLayout
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/partition_title_bar"
        app:overlay="false"
        app:progress_colors="@array/material_colors">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/as_rabbit_title_bar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <com.adolsai.asrabbit.views.InnerSwipeListView
                    android:id="@+id/lv_partition_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/base_tab_white"
                    android:divider="@null"
                    android:listSelector="@android:color/transparent" />
            </RelativeLayout>
        </ScrollView>
    </com.cjj.MaterialRefreshLayout>
</RelativeLayout>